<%- include('../../partials/head.ejs') %>

<div class="container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <div>
                    <img src="<%= author.profilePics %>" class="img-thumbnail img-fluid">
                </div>
                <div class="my-4">
                    <p>Name: <strong> <%= author.profile.name %> </strong></p>
                    <p>Tile: <strong> <%= author.profile.title %> </strong></p>
                    <p>Bio: <%= author.profile.bio %> </p>

                    <div>
                        Social Links: 
                        <% if (author.profile.links.website) { %>
                            <span>
                                <a href="<%= author.profile.links.website %>" target="_blank">
                                    <i class="fab fa-internet-explorer"></i>
                                </a>
                            </span>
                        <% } %>
                        <% if (author.profile.links.facebook) { %>
                            <span>
                                <a href="<%= author.profile.links.facebook %>" target="_blank">
                                    <i class="fab fa-facebook-square"></i>
                                </a>
                            </span>
                        <% } %>
                        <% if (author.profile.links.twitter) { %>
                            <span>
                                <a href="<%= author.profile.links.twitter %>" target="_blank">
                                    <i class="fab fa-twitter-square"></i>
                                </a>
                            </span>
                        <% } %>
                        <% if (author.profile.links.github) { %>
                            <span>
                                <a href="<%= author.profile.links.github %>" target="_blank">
                                    <i class="fab fa-github-square"></i>
                                </a>
                            </span>
                        <% } %>
                    </div>
                </div>

                <div>
                    <p>Post Created By This Author</p>
                    <div class="row">
                            <% if (author.profile.posts.length === 0) { %>
                                <div class="text-center text-muted">
                                    <p>There is no posts available right now</p>
                                </div>
                            <% } else { %>
                                <% for (let post of author.profile.posts.reverse()) { %>
                                    <div class="card col-sm-5 m-2">
                                        <% if (post.thumbnail) { %>
                                            <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="card-img-top mt-3">
                                        <% } %>
                                        <div class="card-body p-0">
                                            <a href="/explorer/<%= post._id %>" style="color: #222;">
                                                <p class="my-2"><%= post.title %></p>
                                            </a>
                                        </div>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/fotter.ejs') %>

</body>
</html>